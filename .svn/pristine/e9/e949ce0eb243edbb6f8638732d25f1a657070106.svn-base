<script type="text/javascript">
    $(document).ready(function(){
        var articleArray = $.parseJSON($("#newsPicture").text());
        var ul = $('.items');
        $.each(articleArray[0],function(index,item){
            var li = "<li><a href='/page/article/"+item.articleId+"' title='"+item.articleTitle+"'><img src='/"+item.pictureUrl+"'></a></li>";
            ul.append(li);
        });
    });

    jQuery(function($){
        $('#newspic').slideBox({
            duration : 0.3,//滚动持续时间，单位：秒
            easing : 'linear',//swing,linear//滚动特效
            delay : 5,//滚动延迟时间，单位：秒
            hideClickBar : false,//不自动隐藏点选按键
            clickBarRadius : 10
        });
    });
</script>

