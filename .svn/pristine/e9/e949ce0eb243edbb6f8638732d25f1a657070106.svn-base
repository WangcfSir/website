<script type="text/javascript">
    // 文章及下载中心排行信息依次是：文件公告、行业动态、政策法规、下载中心
    $(document).ready(function(){
        var oneArticle = $.parseJSON($("#oneArticle").text());
        var twoArticle = $.parseJSON($("#twoArticle").text());
        var threeArticle = $.parseJSON($("#threeArticle").text());
        var otherArticle = $.parseJSON($("#otherArticle").text());
        var downloadRank = $.parseJSON($("#downloadRank").text());
        var news1 = $('#news1');
        var news2 = $('#news2');
        var news3 = $('#news3');
        var news0 = $('#news0');
        var downloadRankTable = $('#downloadRankTable');

        $.each(oneArticle[0],function(index,item){
            var li = "<li><a href='/page/article/"+item.id+"'>"+item.title+"</a><span>"+new Date(item.createTime).format("MM-dd")+"</span></li>";
            news1.append(li);
        });

        $.each(twoArticle[0],function(index,item){
            var li = "<li><p><a href='/page/article/"+item.id+"'>"+item.title+"</a><span>"+new Date(item.createTime).format("MM-dd")+"</span></p></li>";
            news2.append(li);
        });

        $.each(threeArticle[0],function(index,item){
            var li = "<li><a href='/page/article/"+item.id+"'>"+item.title+"</a><span>"+new Date(item.createTime).format("MM-dd")+"</span></li>";
            news3.append(li);
        });

        $.each(otherArticle[0],function(index,item){
            var li = "<li><a href='/page/article/"+item.id+"'>"+item.title+"</a><span>"+new Date(item.createTime).format("MM-dd")+"</span></li>";
            news0.append(li);
        });

        $.each(downloadRank[0],function(index,item){
            console.log(item);
            var $tr = $('<tr>');
            var $td1 = $('<td width="80%">').html('<a href="/'+item.fileUrl+'" target="_blank">&nbsp;'+item.fileName+'</a>');
            var $td2 = $('<td width="20%" align="right" >').html('&nbsp;&nbsp;&nbsp;&nbsp;'+new Date(item.uploadTime).format("MM-dd"));
            $tr.append($td1);
            $tr.append($td2);
            downloadRankTable.append($tr);
        });
    });

</script>

